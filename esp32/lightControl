#include <Arduino.h>
#include <FastLED.h>

#define LED_PIN     5
#define COLOR_ORDER RGB
#define CHIPSET     WS2811
#define NUM_LEDS    30 // 20 per meter
#define MAX_LEDS    70 // maximum number of LEDs in the strip

#define BRIGHTNESS  255
#define FRAMES_PER_SECOND 44

CRGB leds[MAX_LEDS];



void setup() {
   FastLED.addLeds<CHIPSET, LED_PIN, COLOR_ORDER>(leds, NUM_LEDS);
  for (int i = 0; i < MAX_LEDS; i++) {
  leds[i] = CRGB::Red; //test all leds
    FastLED.show();
  delay(100); // wait for a second
  }
  FastLED.addLeds<CHIPSET, LED_PIN, COLOR_ORDER>(leds, NUM_LEDS);
  for (int i = 0; i < MAX_LEDS; i++) {
  leds[i] = CRGB::Black; //black out leds
    FastLED.show();
  }
  
}
/**/
void loop() {
  // all leds white
  
  FastLED.setBrightness(BRIGHTNESS);
  // set all LEDs to white
  for (int i = 0; i < NUM_LEDS; i++) {
    leds[i] = CRGB::White;
  }
  FastLED.show();
  delay(1000); // wait for a second
/* for (int i = 0; i < NUM_LEDS; i++) {
 leds[i] = CRGB::White;
 }
FastLED.show();
delay(1000); // wait for a second
*/
}




